<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/color_secondary_alpha"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />

            <corners android:bottomRightRadius="3dp" android:bottomLeftRadius="3dp"
                android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
        </shape>
    </item>

    <item>
        <scale
            android:drawable="@drawable/launcher_icon_capture"
            android:scaleGravity="center"
            android:scaleHeight="60%"
            android:scaleWidth="60%" />
    </item>

</layer-list>